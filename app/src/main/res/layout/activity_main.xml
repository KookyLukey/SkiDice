<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ski_dice"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kooknluke.skidice.MainActivity" >

    <TextView
        android:id="@+id/txtApres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Ski Dice"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#16A5D9"
        android:textSize="52sp" />

    <Button
        android:id="@+id/btnApres"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:text="Apres"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtApres" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:text="Jumps"
        android:id="@+id/btnJumps"
        android:layout_below="@+id/btnSlopeStyle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:text="Difficulty"
        android:id="@+id/btnDifficulty"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:text="Rails"
        android:id="@+id/btnRails"
        android:layout_below="@+id/btnJumps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:text="Slope Style"
        android:id="@+id/btnSlopeStyle"
        android:layout_below="@+id/btnApres"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_ski_dice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kooknluke.skidice.Slope" >

    <TextView
        android:id="@+id/txtApres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="How many rails/jumps?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#16A5D9" />

    <TextView
        android:id="@+id/txtJump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtApres"
        android:layout_below="@+id/txtApres"
        android:layout_marginTop="22dp"
        android:text="Jumps"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#16A5D9" />

    <Button
        android:id="@+id/bEJ1"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/txtJump"
        android:layout_below="@+id/txtJump"
        android:background="@drawable/buttonshape"
        android:text="1"
        android:textColor="#FFFFFF"
     />

    <Button
        android:id="@+id/bER1"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF" 
        android:text="1" />

    <Button
        android:id="@+id/bEJ3"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/bEJ2"
        android:layout_below="@+id/bEJ2"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonshape"
        android:text="3"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bEJ3"
        android:layout_below="@+id/bEJ3"
        android:layout_marginTop="32dp"
        android:text="Rails"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#16A5D9" />

    <Button
        android:id="@+id/bER2"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/bER1"
        android:layout_below="@+id/bER1"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonshape"
        android:text="2"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/bER3"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/bER2"
        android:layout_below="@+id/bER2"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonshape"
        android:text="3"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/MJ1t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bEJ1"
        android:layout_alignBottom="@+id/bEJ1"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textAlignment="center" />

    <TextView
        android:id="@+id/MJ2t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bEJ2"
        android:layout_alignBottom="@+id/bEJ2"
        android:layout_alignLeft="@+id/MJ1t"
        android:text=" " />

    <TextView
        android:id="@+id/MJ3t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bEJ3"
        android:layout_alignBottom="@+id/bEJ3"
        android:layout_alignLeft="@+id/MJ2t"
        android:text=" " />

    <TextView
        android:id="@+id/MR1t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bER1"
        android:layout_alignBottom="@+id/bER1"
        android:layout_alignLeft="@+id/MJ3t"
        android:text=" " />

    <TextView
        android:id="@+id/MR2t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bER2"
        android:layout_alignBottom="@+id/bER2"
        android:layout_alignLeft="@+id/MR1t"
        android:text=" " />

    <TextView
        android:id="@+id/MR3t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bER3"
        android:layout_alignBottom="@+id/bER3"
        android:layout_alignLeft="@+id/MR2t"
        android:text=" " />

    <Button
        android:id="@+id/bEJ2"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/bEJ1"
        android:layout_below="@+id/bEJ1"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonshape"
        android:text="2"
        android:textColor="#FFFFFF" />
    
</RelativeLayout>
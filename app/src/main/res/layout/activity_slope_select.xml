<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_ski_dice"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kooknluke.skidice.SlopeSelect" >

    <TextView
        android:id="@+id/txtApres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="What Level?"
        android:textColor="#16A5D9"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/btnSlopeEasy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSlopeMed"
        android:layout_below="@+id/txtApres"
        android:layout_marginTop="41dp"
        android:background="@drawable/buttonshape"
        android:text="Easy"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnSlopeMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtApres"
        android:layout_below="@+id/btnSlopeEasy"
        android:layout_marginTop="18dp"
        android:background="@drawable/buttonshape"
        android:text="Medium"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnSlopeHard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSlopeMed"
        android:layout_below="@+id/btnSlopeMed"
        android:layout_marginTop="18dp"
        android:background="@drawable/buttonshape"
        android:text="Hard"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnSlopePro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnSlopeHard"
        android:layout_below="@+id/btnSlopeHard"
        android:layout_marginTop="19dp"
        android:background="@drawable/buttonshape"
        android:text="Pro"
        android:textColor="#FFFFFF" />

</RelativeLayout>
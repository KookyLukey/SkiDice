<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kooknluke.skidice.shakeSlope"
    android:background="@drawable/background_ski_dice">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Jumps"
        android:id="@+id/jumpView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/jumpTrick1"
        android:layout_below="@+id/jumpView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textColor="#16A5D9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/jumpTrick2"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/jumpTrick1"
        android:layout_centerHorizontal="true"
        android:textColor="#16A5D9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/jumpTrick3"
        android:layout_below="@+id/jumpTrick2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:textColor="#16A5D9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rails"
        android:id="@+id/railsView"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/railTrick1"
        android:layout_below="@+id/railsView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textColor="#16A5D9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/railTrick2"
        android:layout_below="@+id/railTrick1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#16A5D9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/railTrick3"
        android:layout_below="@+id/railTrick2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:textColor="#16A5D9" />

</RelativeLayout>

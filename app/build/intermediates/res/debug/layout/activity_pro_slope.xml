<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_ski_dice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".HardSlope" >

    <TextView
        android:id="@+id/txtApres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="How many rails/jumps?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#16A5D9" />

    <Button
        android:id="@+id/PJ1"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/txtJump"
        android:layout_below="@+id/txtJump"
        android:text="1" />

    <Button
        android:id="@+id/PR1"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:background="@drawable/buttonshape"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="1" />

    <Button
        android:id="@+id/PJ2"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/PJ1"
        android:layout_below="@+id/PJ1"
        android:layout_marginTop="15dp"
        android:background="@drawable/buttonshape"
        android:text="2"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtJump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtApres"
        android:layout_below="@+id/txtApres"
        android:layout_marginTop="16dp"
        android:text="Jumps"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#16A5D9" />

    <Button
        android:id="@+id/PJ3"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/PJ2"
        android:layout_below="@+id/PJ2"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonshape"
        android:text="3"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/PJ3"
        android:layout_below="@+id/PJ3"
        android:layout_marginTop="23dp"
        android:text="Rails"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#16A5D9" />

    <Button
        android:id="@+id/PR2"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/PR1"
        android:layout_below="@+id/PR1"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonshape"
        android:text="2"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/PR3"
        android:layout_width="45dp"
        android:layout_height="42dp"
        android:layout_alignLeft="@+id/PR2"
        android:layout_below="@+id/PR2"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonshape"
        android:text="3"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/PJ1t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PJ1"
        android:layout_alignBottom="@+id/PJ1"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/txtJump"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/PJ2t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PJ2"
        android:layout_alignBottom="@+id/PJ2"
        android:layout_alignLeft="@+id/PJ1t"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/PJ3t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PJ3"
        android:layout_alignBottom="@+id/PJ3"
        android:layout_alignLeft="@+id/PJ2t"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/PR1t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PR1"
        android:layout_alignBottom="@+id/PR1"
        android:layout_alignLeft="@+id/PJ3t"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/PR2t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PR2"
        android:layout_alignBottom="@+id/PR2"
        android:layout_alignLeft="@+id/PR1t"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/PR3t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/PR3"
        android:layout_alignBottom="@+id/PR3"
        android:layout_alignLeft="@+id/PR2t"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15sp" />

</RelativeLayout>

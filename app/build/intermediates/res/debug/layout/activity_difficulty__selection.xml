<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kooknluke.skidice.Difficulty_Selection">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/gaper"
        android:id="@+id/btnGaper"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/aight"
        android:id="@+id/btnIght"
        android:layout_below="@+id/btnGaper"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pro"
        android:id="@+id/btnPro"
        android:layout_below="@+id/btnIght"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/todd_wallnuts"
        android:id="@+id/btnTW"
        android:layout_below="@+id/btnPro"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

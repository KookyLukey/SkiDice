<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_ski_dice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kooknluke.skidice.Rail" >

    <TextView
        android:id="@+id/txtEJ1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="What level?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#16A5D9"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnRailPro"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnRailHard"
        android:layout_below="@+id/btnRailHard"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonshape"
        android:text="Will Wesson"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnRailEasy"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnRailMed"
        android:layout_below="@+id/txtEJ1"
        android:layout_marginTop="98dp"
        android:background="@drawable/buttonshape"
        android:text="Side Jumper"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnRailMed"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/btnRailEasy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/buttonshape"
        android:text="Meh"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnRailHard"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btnRailMed"
        android:layout_below="@+id/btnRailMed"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonshape"
        android:text="Amateur"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtRail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEJ1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text=" "
        android:textAlignment="center"
        android:textSize="24sp" />

</RelativeLayout><!-- From: file:/Users/Athena/AndroidstudioProjects/SkiDice/app/src/main/res/layout/activity_rail.xml -->